{
	"name": "convertdata",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorage1",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"pp_filename": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"fileName": {
					"value": "@{split(dataset().pp_filename,'txt')[2]}\n@Concat(dataset().pp_filename,'.csv')",
					"type": "Expression"
				},
				"folderPath": "STAGEING",
				"fileSystem": "adlscontainer1"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": []
	}
}